<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".AddBookActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"

        android:backgroundTint="@color/background">


        <EditText
            android:id="@+id/titlef"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="110dp"
            android:paddingStart="20dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="title"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:elevation="8dp"
            android:inputType="textPersonName"
            />



        <EditText
            android:id="@+id/authorf"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:paddingStart="20dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:hint="author"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:elevation="8dp"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/genref"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="160dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:elevation="8dp"
            android:paddingStart="20dp"
            android:hint="genre"
            android:inputType="textPersonName"
            />

        <EditText
            android:id="@+id/pricef"
            android:layout_width="400dp"
            android:paddingStart="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:elevation="8dp"
            android:hint="price"
            android:inputType="textPostalAddress"
            />

        <EditText
            android:id="@+id/descriptionf"
            android:layout_width="400dp"
            android:paddingStart="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="260dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:elevation="8dp"
            android:hint="description"
            android:inputType="textPostalAddress"
            />

        <EditText
            android:id="@+id/imagef"
            android:layout_width="400dp"
            android:paddingStart="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="310dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:elevation="8dp"
            android:hint="image"
            android:inputType="textPostalAddress"
            />

        <EditText
            android:id="@+id/burrowf"
            android:layout_width="400dp"
            android:paddingStart="20dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="360dp"
            android:layout_marginEnd="16dp"
            android:ems="10"
            android:background="@drawable/custom_input"
            android:padding="10dp"
            android:elevation="8dp"
            android:hint="burrowed"
            android:inputType="text"
            />


        <Button
            android:id="@+id/buttonAddRecord2"
            android:layout_width="160dp"
            android:layout_height="53dp"
            android:layout_marginTop="450dp"

            android:layout_marginStart="120dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/custom_button"
            android:fontFamily="@font/breeserifregular"
            android:text="New Record"
            android:textColor="#FFFFFF"
            android:textSize="20dp"
            />




    </RelativeLayout></ScrollView>